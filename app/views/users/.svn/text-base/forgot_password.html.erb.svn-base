<div class="contenttopnavigation">
	<div class="contenttopnavleft"> 
		<div class="contenttopnavicon">
			<img src="/images/signup_key.gif" width="26" height="22" />
		</div>
		<div class="contenttopnavtext">
			Forgot Password
		</div>
	</div>
</div>
<!-- Actor wrapper strats here -->
<div class="actorwrapper">
	<div class="registertopcont"> 

		<div class="registerwrapper" align="center"> 
If you have signed up for Mekosam and forgotten your password, enter your user name or email address below. You will receive an email containing a link that will allow you to create a new password.
			<% form_tag url_for(:action => 'forgot_password') do %>
				<div class="registercontainer" id="content">
					<div class="regformcont"> 
						<div class="regfieldname">Enter your user name</div>
						<div class="regfieldinput"><%= text_field_tag 'username', nil, :size => "30" %></div>
						<div class="regfieldquestionmark"><a href="#"><img border="0" src="/images/field_question.gif"/></a></div>
					</div>
					<div class="regformcont"> 
						<div class="regfieldname">or your account email</div>
						<div class="regfieldinput"><%= text_field_tag 'email', nil, :size => "30" %></div>
						<div class="regfieldquestionmark"><a href="#"><img border="0" src="/images/field_question.gif"/></a></div>
					</div>
					<div class="regformcont"> 
						<div class="regfieldname"></div>
						<div class="regfieldinput"><%= submit_tag 'Reset Password' %></div>
					</div>
				</div>
			<% end -%>
		</div>
	</div>
</div>